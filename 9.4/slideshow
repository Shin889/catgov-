<div class="content-wrapper">
  <div class="slideshow-container">
    <img id="mainImage" src="http://wp-local.com/wp-content/uploads/2025/09/pic72.jpg" class="card-image" style="cursor:pointer; max-width: 600px; border-radius: 8px;">
  </div>
</div>

<!-- Modal structure -->
<div id="imageModal" class="modal">
  <span class="close" onclick="closeModal()">&times;</span>
  <div class="modal-content-wrapper">
    <a class="prev" onclick="plusSlides(-1)">❮</a>
    <img id="modalImage" alt="Modal Image">
    <a class="next" onclick="plusSlides(1)">❯</a>
    <div class="modal-dots"></div>
  </div>
</div>

<style>
  .content-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
    margin-bottom: 30px;
    text-align: center;
  }
  .card-image {
    cursor: pointer;
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }
  .modal {
    display: none;
    position: fixed;
    z-index: 999;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.8);
    align-items: center;
    justify-content: center;
  }
  .modal-content-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 15px;
    position: relative;
    max-width: 90vw;
  }
  .modal-content-wrapper img {
    max-width: 90%;
    max-height: 80vh;
    object-fit: contain;
    border-radius: 8px;
  }
  .modal-content-wrapper .prev,
  .modal-content-wrapper .next {
    font-size: 30px;
    color: white;
    cursor: pointer;
    user-select: none;
    transition: 0.3s;
  }
  .modal-content-wrapper .prev:hover,
  .modal-content-wrapper .next:hover {
    color: #ccc;
  }
  .close {
    position: absolute;
    top: 20px;
    right: 30px;
    font-size: 30px;
    font-weight: bold;
    color: white;
    cursor: pointer;
    z-index: 1000;
  }
  .modal-dots {
    text-align: center;
    position: absolute;
    bottom: 15px;
    left: 50%;
    transform: translateX(-50%);
  }
  .modal-dots .dot {
    cursor: pointer;
    height: 10px;
    width: 10px;
    margin: 0 3px;
    background-color: rgba(255,255,255,0.6);
    border-radius: 50%;
    display: inline-block;
  }
  .modal-dots .active-dot {
    background-color: #fff;
  }
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  const allImages = [
    "http://wp-local.com/wp-content/uploads/2025/09/pic72.jpg",
    "http://wp-local.com/wp-content/uploads/2025/09/pic73.jpg",
    "http://wp-local.com/wp-content/uploads/2025/09/pic32.jpg",
    "http://wp-local.com/wp-content/uploads/2025/09/pic33.jpg",
    "http://wp-local.com/wp-content/uploads/2025/09/pic34.jpg",
    "http://wp-local.com/wp-content/uploads/2025/09/pic35.jpg"
  ];

  const mainImage = document.getElementById("mainImage");
  const modal = document.getElementById('imageModal');
  const modalImg = document.getElementById('modalImage');
  const modalDotsContainer = modal.querySelector(".modal-dots");

  let currentIndex = 0;
  let modalDots = [];
  const autoplayDelay = 3000; // 3 seconds

  let mainAutoplayInterval = null;
  let modalAutoplayInterval = null;

  // Main page autoplay function
  function startMainAutoplay() {
    if (mainAutoplayInterval) clearInterval(mainAutoplayInterval);
    mainAutoplayInterval = setInterval(() => {
      currentIndex = (currentIndex + 1) % allImages.length;
      mainImage.src = allImages[currentIndex];
    }, autoplayDelay);
  }

  function stopMainAutoplay() {
    if (mainAutoplayInterval) {
      clearInterval(mainAutoplayInterval);
      mainAutoplayInterval = null;
    }
  }

  // Modal autoplay functions
  function startModalAutoplay() {
    stopModalAutoplay();
    modalAutoplayInterval = setInterval(() => {
      plusSlides(1);
    }, autoplayDelay);
  }

  function stopModalAutoplay(){
    if(modalAutoplayInterval){
      clearInterval(modalAutoplayInterval);
      modalAutoplayInterval = null;
    }
  }

  function resetModalAutoplay(){
    stopModalAutoplay();
    startModalAutoplay();
  }

  function generateDots(images) {
    modalDotsContainer.innerHTML = "";
    modalDots = [];
    images.forEach((src, i) => {
      const dot = document.createElement("span");
      dot.classList.add("dot");
      dot.addEventListener("click", () => {
        showSlide(i);
        resetModalAutoplay();
      });
      modalDotsContainer.appendChild(dot);
      modalDots.push(dot);
    });
  }

  function showSlide(n) {
    currentIndex = (n + allImages.length) % allImages.length;
    modalImg.src = allImages[currentIndex];
    modalDots.forEach(d => d.classList.remove("active-dot"));
    modalDots[currentIndex].classList.add("active-dot");
  }

  function openModal() {
    stopMainAutoplay();             // pause main page autoplay
    modal.style.display = "flex";
    generateDots(allImages);
    showSlide(currentIndex);
    startModalAutoplay();
  }

  function closeModal() {
    modal.style.display = "none";
    stopModalAutoplay();
    mainImage.src = allImages[currentIndex];  // update main image to current modal image
    startMainAutoplay();                       // resume main page autoplay
  }

  function plusSlides(n) {
    showSlide(currentIndex + n);
    resetModalAutoplay();
  }

  // Event listeners
  mainImage.addEventListener("click", openModal);
  modal.querySelector('.prev').addEventListener("click", () => plusSlides(-1));
  modal.querySelector('.next').addEventListener("click", () => plusSlides(1));
  modal.querySelector('.close').addEventListener("click", closeModal);

  window.addEventListener("click", function(event) {
    if (event.target === modal) closeModal();
  });

  // Start autoplay on page load
  startMainAutoplay();

});
</script>
