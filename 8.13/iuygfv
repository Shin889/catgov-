    <div id="chart-container" class="chart-scale">
      <div id="example2_1"></div>
    </div>
  </div>

  <script>
    
    const chartWrapper = document.getElementById("chartWrapper");
    let isDown = false;
    let startX;
    let scrollLeft;
  
    chartWrapper.addEventListener("mousedown", (e) => {
      isDown = true;
      chartWrapper.classList.add("active");
      startX = e.pageX - chartWrapper.offsetLeft;
      scrollLeft = chartWrapper.scrollLeft;
    });
  
    chartWrapper.addEventListener("mouseleave", () => {
      isDown = false;
    });
  
    chartWrapper.addEventListener("mouseup", () => {
      isDown = false;
    });
  
    chartWrapper.addEventListener("mousemove", (e) => {
      if (!isDown) return;
      e.preventDefault();
      const x = e.pageX - chartWrapper.offsetLeft;
      const walk = (x - startX) * 1; // multiply for speed
      chartWrapper.scrollLeft = scrollLeft - walk;
    });
  </script>
<script type="text/javascript">
  google.charts.load("current", { packages: ["timeline"] });
  google.charts.setOnLoadCallback(init);

  let chart, dataTable;
  let minDate, maxDate;
  let zoomFactor = 1; 
function init() {
  const container = document.getElementById("example2_1");
  chart = new google.visualization.Timeline(container);
  dataTable = new google.visualization.DataTable();

  dataTable.addColumn({ type: "string", id: "Term" });
  dataTable.addColumn({ type: "string", id: "Name" });
  dataTable.addColumn({ type: "date", id: "Start" });
  dataTable.addColumn({ type: "date", id: "End" });

 dataTable.addRows([
  ["1", "Samuel Vilanueva Laynes", new Date(2016, 0, 1), new Date(2019, 0, 2)],
  ["2", "Sinforoso Magallanes Sarmiento Jr.", new Date(2019, 0, 1), new Date(2022, 0, 2)],
  ["3", "Samuel Vilanueva Laynes", new Date(2022, 0, 1), new Date(2025, 0, 2)]
]);

// Limit chart view from 2016 to 2025
minDate = new Date(2016, 0, 1);
maxDate = new Date(2025, 11, 31);

  drawChart();
}function drawChart() {
  let ticks = [];
  let startYear = minDate.getFullYear();
  let endYear = maxDate.getFullYear();
  for (let y = startYear; y <= endYear; y++) {
    ticks.push(new Date(y, 0, 1));
  }

  const baseRowHeight = zoomFactor === 1 ? 35 : 45;
  const rowHeight = baseRowHeight * zoomFactor;
  const chartHeight = dataTable.getNumberOfRows() * rowHeight + 30;

  let years = endYear - startYear + 1;
  let baseWidth = zoomFactor === 1 ? 80 : 100; 
  let chartWidth = years * baseWidth * zoomFactor;

  
  let finalWidth = Math.max(chartWidth, 550);

  chart.draw(dataTable, {
    height: chartHeight,
    width: finalWidth,
    timeline: {
      rowLabelStyle: { fontSize: 12 * zoomFactor, color: '#444' },
      barLabelStyle: { fontSize: 12 * zoomFactor, color: '#222' }
    },
    avoidOverlappingGridLines: true,
   hAxis: {
  format: 'yyyy',
  ticks: ticks,
  gridlines: { count: ticks.length },
  minorGridlines: { count: 0 },
  viewWindowMode: 'explicit',
  viewWindow: { min: minDate, max: maxDate }
}

  });
}



function zoomIn() {
  zoomFactor = Math.min(zoomFactor * 1.25, 5); 
  drawChart();
}

function zoomOut() {
  zoomFactor = Math.max(zoomFactor / 1.25, 0.5); 
  drawChart();
}

</script>

</div>

